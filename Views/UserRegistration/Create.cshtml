@model Hotel_Management_MVC.ViewModels.UserRegistrationCreateModelForCustomer

@{
    ViewData["Title"] = "Create";
}

<style>
    .submit-btn {
        margin-top: 1.5rem
    }

    .radio {
        /* border: 1px solid red; */
        /* box-shadow: 0px 0px 0px 1px #6d6d6d; */
        font-size: 3em;
        width: 25px;
        height: 25px;
        margin-right: 7px;
        /* border: 4px solid #fff;
        background-clip: border-box;
        border-radius: 50%;
        appearance: none;
        transition: background-color 0.3s, box-shadow 0.3s; */
    }

    .radio-box {
        display: flex;
        align-items: center;
        justify-content: start;
        gap: 2rem
    }

    .radio-div {
        display: flex;
        align-items: center;
        justify-content: start;
    }
</style>

<h1>Registration</h1>

<hr />

<form asp-action="Create" enctype="multipart/form-data">
    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-md-4">
            @*<div class="form-group">
                    <label asp-for="User_ID" class="control-label"></label>
                    <input asp-for="User_ID" class="form-control" />
                    <span asp-validation-for="User_ID" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                <label asp-for="First_Name" class="control-label"></label>
                <input asp-for="First_Name" class="form-control" />
                <span asp-validation-for="First_Name" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Last_Name" class="control-label"></label>
                <input asp-for="Last_Name" class="form-control" />
                <span asp-validation-for="Last_Name" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input type="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="ConatactNo" class="control-label"></label>
                <input asp-for="ConatactNo" class="form-control" />
                <span asp-validation-for="ConatactNo" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label class="font-weight-bold">Photo:</label>
                <div class="custom-file">
                    <input asp-for="Profile_Image" class="form-control custom-file-input" type="file" />
                    <label class="custom-file-label" for="Photos">Choose Photo .....</label>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="DOB" class="control-label"></label>
                <input asp-for="DOB" class="form-control" />
                <span asp-validation-for="DOB" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="State" class="control-label"></label>
                <input asp-for="State" class="form-control" />
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <br />
                <div class="radio-box">
                    <div class="radio-div">
                        <input asp-for="Gender" class="radio" type="radio" name="gender" value="Male" />
                        <span>Male</span>
                    </div>
                    <div class="radio-div">
                        <input asp-for="Gender" class="radio" type="radio" name="gender" value="FeMale" />
                        <span>FeMale</span>
                    </div>
                </div>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 submit-btn">

            @*<div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Active_Flag" /> @Html.DisplayNameFor(model => model.Active_Flag)
                    </label>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Delete_Flag" /> @Html.DisplayNameFor(model => model.Delete_Flag)
                    </label>
                </div>
                <div class="form-group">
                    <label asp-for="sortedfield" class="control-label"></label>
                    <input asp-for="sortedfield" class="form-control" />
                    <span asp-validation-for="sortedfield" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
