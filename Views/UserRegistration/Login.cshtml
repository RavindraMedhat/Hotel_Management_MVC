@model Hotel_Management_MVC.Models.LoginRequest

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
/*    body {
        background: linear-gradient(to right, #b4e7ff, #c0f4f9);
        color: #333;
    }*/
    body {
        background-color: black; /* Set background color to black */
        color: #fff; /* Set text color to white */
    }

    .login-container {
        background: linear-gradient(to right, black, #e6f7ff);
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.2);
        height: 100%; /* Set height to 100% */
    }

    .login-container h1 {
        color: #333;
    }

    .login-form {
        margin-top: 20px;
    }

    .login-image {
        max-width: 100%;
        height: auto; /* Set height to auto for responsiveness */
        border-radius: 10px;
    }
</style>


<h1>Login</h1>

<hr />
<div class="row">
    <div class="col-md-6 col-sm-12">
        <div class="login-container">
            <form asp-action="Login" class="login-form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="EmailID" class="control-label"></label>
                    <input asp-for="EmailID" class="form-control" />
                    <span asp-validation-for="EmailID" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>

                <div class="form-group">
                    <p>
                        Don't have an account? <a asp-action="Create" asp-controller="UserRegistration">Register here</a>.
                    </p>
                </div>
            </form>
        </div>
    </div>

    <div class="col-md-6 col-sm-12">
        <img src="~/Public/Images/istockphoto-1281150061-612x612-removebg-preview.png" alt="Login Image" class="login-image" />
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
