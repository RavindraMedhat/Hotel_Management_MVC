@model IEnumerable<Hotel_Management_MVC.ViewModels.couponViewModelForIndex>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

<h1>Index</h1>

<p>
    <a asp-action="Create" asp-route-hid="@ViewBag.Hotel_ID">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Coupon_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Start_Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Expiry_Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Discount_Percentage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.noOfAvailableCoupen)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Coupon_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Start_Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Expiry_Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Discount_Percentage)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.noOfAvailableCoupen)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                </td>
                <td>
                    <a class="btn btn-primary fas fa-share" style="color:whitesmoke" asp-action="SendEmail" asp-route-hid="@ViewBag.Hotel_ID" asp-route-Cname="@item.Coupon_Name" asp-route-NoOFCoupen="@item.noOfAvailableCoupen"  >share</a>
                </td>
            </tr>
        }
    </tbody>
</table>
