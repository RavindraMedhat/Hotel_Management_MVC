@model Hotel_Management_MVC.ViewModels.HotelViewModelForDetails

@{
    ViewData["Title"] = "Edit Hotel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center mt-4">Edit Hotel</h1>

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h2 class="text-center">@Model.Hotel_Name</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 text-center">
                    <div id="imageSlider" class="slick-slider">
                        @foreach (var image in Model.images)
                        {
                            <div><img class="img-fluid" style="height:800px" src="@image" alt="Hotel Image" /></div>
                        }
                    </div>
                </div>
                <div class="col-md-6">
                    <form method="post" asp-action="Edit">
                        <dl class="row">
                            <dt class="col-sm-4">Hotel ID:</dt>
                            <dd class="col-sm-8">
                                <input asp-for="Hotel_ID" class="form-control" readonly />
                                <span asp-validation-for="Hotel_ID" class="text-danger"></span>
                            </dd>

                            <dt class="col-sm-4">Hotel Name:</dt>
                            <dd class="col-sm-8">
                                <input asp-for="Hotel_Name" class="form-control" />
                                <span asp-validation-for="Hotel_Name" class="text-danger"></span>
                            </dd>

                            <dt class="col-sm-4">Description:</dt>
                            <dd class="col-sm-8">
                                <input asp-for="Hotel_Description" class="form-control" />
                                <span asp-validation-for="Hotel_Description" class="text-danger"></span>
                            </dd>

                            <dt class="col-sm-4">Map Coordinate:</dt>
                            <dd class="col-sm-8">
                                <input asp-for="Hotel_map_coordinate" class="form-control" />
                                <span asp-validation-for="Hotel_map_coordinate" class="text-danger"></span>
                            </dd>

                            <dt class="col-sm-4">Address:</dt>
                            <dd class="col-sm-8">
                                <input asp-for="Address" class ="form-control" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </dd>

                            <dt class="col-sm-4">Contact No:</dt>
                            <dd class="col-sm-8">
                                <input asp-for="Contact_No" class="form-control" />
                                <span asp-validation-for="Contact_No" class="text-danger"></span>
                            </dd>

                            <dt class="col-sm-4">Email Address:</dt>
                            <dd class="col-sm-8">
                                <input asp-for="Email_Adderss" class="form-control" />
                                <span asp-validation-for="Email_Adderss" class="text-danger"></span>
                            </dd>

                            <dt class="col-sm-4">Contact Person:</dt>
                            <dd class="col-sm-8">
                                <input asp-for="Contect_Person" class="form-control" />
                                <span asp-validation-for="Contect_Person" class="text-danger"></span>
                            </dd>

                            <dt class="col-sm-4">Check-In Time:</dt>
                            <dd class="col-sm-8">
                                <input asp-for="Standard_check_In_Time" class="form-control" />
                                <span asp-validation-for="Standard_check_In_Time" class="text-danger"></span>
                            </dd>

                            <dt class="col-sm-4">Check-Out Time:</dt>
                            <dd class="col-sm-8">
                                <input asp-for="Standard_check_out_Time" class="form-control" />
                                <span asp-validation-for="Standard_check_out_Time" class="text-danger"></span>
                            </dd>

                            <dt class="col-sm-4">Active Flag:</dt>
                            <dd class="col-sm-8">
                                <input asp-for="Active_Flag" class="form-control" />
                                <span asp-validation-for="Active_Flag" class="text-danger"></span>
                            </dd>

                            <dt class="col-sm-4">Delete Flag:</dt>
                            <dd class="col-sm-8">
                                <input asp-for="Delete_Flag" class="form-control" />
                                <span asp-validation-for="Delete_Flag" class="text-danger"></span>
                            </dd>

                            <dt class="col-sm-4">Sorted Field:</dt>
                            <dd class="col-sm-8">
                                <input asp-for="sortedfield" class="form-control" />
                                <span asp-validation-for="sortedfield" class="text-danger"></span>
                            </dd>
                        </dl>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css" />

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#imageSlider').slick({
                dots: true,
                infinite: true,
                speed: 500,
                slidesToShow: 1,
                slidesToScroll: 1,
                autoplay: true,
                autoplaySpeed: 3000
            });
        });
    </script>
}
