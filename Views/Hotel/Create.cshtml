            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts{
    <script>
        // Initialize the map
        function initMap() {
            var map = new google.maps.Map(document.getElementById('map'), {
                center: { lat: 21.196060, lng: 72.904547 }, // Set initial map center coordinates
                zoom: 15 // Set the initial zoom level
            });

            // Initialize the marker
            var marker = new google.maps.Marker({
                position: { lat: 21.196060, lng: 72.904547 },
                map: map,
                draggable: true // Allow marker to be dragged
            });

            // Update input field when marker is dragged
            google.maps.event.addListener(marker, 'dragend', function (event) {
                var lat = event.latLng.lat();
                var lng = event.latLng.lng();
                document.getElementById('map-coordinate-input').value = lat + ',' + lng;
            });

            // Allow users to click on the map to place the marker
            google.maps.event.addListener(map, 'click', function (event) {
                marker.setPosition(event.latLng);
                document.getElementById('map-coordinate-input').value = event.latLng.lat() + ',' + event.latLng.lng();
            });
        }

        // Call the initMap function when the page loads
        google.maps.event.addDomListener(window, 'load', initMap);
    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=YOUR_API_KEY&callback=initMap" async defer></script>
}
